<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dnwnxu6xb/image/upload/v1583399715/shopping-bag_bklnma.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My store", mystore_path(current_user.id), class: "dropdown-item" %>
            <%= link_to "Create a livecast", new_livecast_path, class: "dropdown-item" %>
            <%= link_to "See my livecasts", usermylivecasts_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">



          <%- Devise.omniauth_providers.each do |provider| %>

    <%= link_to " Sign in with #{OmniAuth::Utils.camelize(provider)}", user_facebook_omniauth_authorize_path , class: "fab fa-facebook-square btn btn-primary" %><br/>
  <% end %>

        </li>
      <% end %>
    </ul>
  </div>
</div>
