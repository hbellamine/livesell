<h1>Hello <%=current_user.id%>, welcome to your store</h2>

<%=link_to "Add a new product to your store", new_store_product_path(@store) %>

<%if (params[:livecast] != nil)%>

<%=link_to "Back to my sessions", usermylivecasts_path %>

<%end%>

<% @products.each do |product| %>

  <div class= "productshow">
    <div>
      <div class="displayproducts">
          <div class="card-trip">


            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <% product.pictures.each do |picture| %>
                    <% if picture == product.pictures[0] %>
                      <div class="carousel-item active">
                        <%= cl_image_tag picture.key, height: 300, width: 400, crop: :fill %>
                      </div>
                    <%else%>
                      <div class="carousel-item">
                        <%= cl_image_tag picture.key, height: 300, width: 400, crop: :fill %>
                      </div>
                    <%end%>

                <% end %>
              </div>

              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>

              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>




        <div class="card-trip-infos">
          <div>
              <h2><%= product.description %></h2>
              <p><%= product.color%></p>
              <p><%= product.size%></p>
          </div>
          <h2 class="card-trip-pricing"><%= product.price%></h2>
        </div>
      </div>

            <%if (params[:livecast] != nil)%>
            <%= link_to "Add to livecast",livecast_product_selection_path(params[:livecast],product.id) %>
            <%end%>
<%end%>
      </div>


